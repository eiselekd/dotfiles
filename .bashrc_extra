function record () {
   d=`date +"%Y-%m-%d-%H-%M-%S"`
   if [ ! -d ${LOGDIR} ]; then mkdir -p ${LOGDIR}; fi
   touch ${LOGDIR}/${d}
   script  -a ${LOGDIR}/${d}
   history > ${LOGDIR}/${d}.history


   exec 1> >(logger -s -t $(basename $0)) 2>&1
}

