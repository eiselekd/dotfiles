function disable_trackpad()
{
  # xinput set-prop 13 "Device Enabled" 0
  l=`xinput list | grep Synaptics `
  if [ ! -z "$l" ]; then
    id=`expr "$l" : '.*id=\([0-9]\+\)'`
    xinput --disable $id
  fi
}

function enable_trackpad()
{
  l=`xinput list | grep Synaptics `
  if [ ! -z "$l" ]; then
    id=`expr "$l" : '.*id=\([0-9]\+\)'`
    xinput --enable $id
  fi
}

